<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@color/colorText">

    <ImageView
        android:id="@+id/imageCardRecipe"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/cell_recette_placeholder"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/titleConainterCardRecipe"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/colorReceipeTitle"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titleCardRecipe"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="-3dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorText"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="-3dp"
                android:layout_gravity="center"
                android:src="@drawable/img_cell_next"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:weightSum="3"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@color/colorText"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/typeCardRecipe"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/img_ic_photos"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@color/colorText"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/timeCardRecipe"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/img_ic_photos"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@color/colorText"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/complexityCardRecipe"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/img_ic_photos"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>